{
  "name": "t.hom.as",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && NODE_ENV=production node index.js",
    "start:dev": "npm run build:dev && NODE_ENV=development node index.js",
    "build": "NODE_ENV=production webpack",
    "build:dev": "NODE_ENV=development webpack",
    "test": "xo",
    "deploy": "rsync -r static/*"
  },
  "author": "Thomas Lindstr√∏m <t@hom.as>",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "xo": {
    "space": 4,
    "rules": {
      "operator-linebreak": [
        2,
        "before"
      ],
      "indent": 0,
      "camelcase": [
        2,
        {
          "properties": "never"
        }
      ],
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "Q",
            "CSSModules"
          ]
        }
      ],
      "no-warning-comments": 0,
      "no-irregular-whitespace": [
        2,
        {
          "skipComments": true
        }
      ],
      "babel/arrow-parens": [
        2,
        "always"
      ],
      "babel/generator-star-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "babel/new-cap": 0,
      "xo/catch-error-name": [
        2,
        {
          "name": "error"
        }
      ],
      "max-params": 0,
      "max-lines": 0,
      "object-property-newline": 0,
      "complexity": 0,
      "import/no-extraneous-dependencies": 0
    },
    "overrides": [
      {
        "files": "app/**/*.js",
        "envs": [
          "browser"
        ]
      }
    ],
    "ignores": [
      "static/**/*"
    ]
  },
  "dependencies": {
    "@amphibian/copy": "^1.1.6",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.11.6",
    "chalk": "^1.1.3",
    "json-loader": "^0.5.4",
    "koa": "^1.2.1",
    "koa-mount": "^1.3.0",
    "koa-static": "^2.0.0",
    "koa-webpack-dev-middleware": "^1.2.1",
    "pleasejs": "^0.4.2",
    "webpack": "^1.13.1",
    "webpack-hot-middleware": "^2.12.2"
  },
  "devDependencies": {
    "xo": "^0.16.0"
  }
}
